@model Dshops1.Models.User

    <form action="/Registration/Register" method="post">
        <div class="form-group">
            <label>Name</label>
            <input type="text" placeholder="Enter Name" asp-for="Name" required>
        </div>
        <div class="form-group">
            <label>Email address</label>
            <input type="email" placeholder="Enter Email" asp-for="Email" required>
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input type="tel" placeholder="Enter Phone Number" asp-for="phone" required>
        </div>
        <div class="form-group">
            <label>User Name</label>
            <input type="text" placeholder="Enter User Name" asp-for="UserName" required>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" placeholder="Enter Password" asp-for="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    @if (ViewBag.UserName != null)
    {
        <h1>
            @ViewBag.UserName
        </h1>
    }






